import json
import os
import argparse

DATA_FILE = "tasks.json"

def load_tasks():
    if not os.path.exists(DATA_FILE):
        return []
    with open(DATA_FILE, "r") as f:
        return json.load(f)

def save_tasks(tasks):
    with open(DATA_FILE, "w") as f:
        json.dump(tasks, f, indent=4)

def add_task(description):
    tasks = load_tasks()
    task = {"id": len(tasks) + 1, "description": description, "done": False}
    tasks.append(task)
    save_tasks(tasks)
    print(f"âœ… Added task: {description}")

def list_tasks():
    tasks = load_tasks()
    if not tasks:
        print("ğŸ—’ï¸ No tasks yet.")
        return
    for task in tasks:
        status = "âœ”ï¸" if task["done"] else "âŒ"
        print(f"[{task['id']}] {status} {task['description']}")

def complete_task(task_id):
    tasks = load_tasks()
    for task in tasks:
        if task["id"] == task_id:
            task["done"] = True
            save_tasks(tasks)
            print(f"ğŸ‰ Task {task_id} marked as complete.")
            return
    print(f"âš ï¸ No task found with ID {task_id}.")

def delete_task(task_id):
    tasks = load_tasks()
    new_tasks = [task for task in tasks if task["id"] != task_id]
    if len(new_tasks) == len(tasks):
        print(f"âš ï¸ No task found with ID {task_id}.")
    else:
        save_tasks(new_tasks)
        print(f"ğŸ—‘ï¸ Deleted task {task_id}.")

def main():
    parser = argparse.ArgumentParser(description="Simple CLI To-Do App")
    subparsers = parser.add_subparsers(dest="command")

    subparsers.add_parser("list", help="List all tasks")

    add_parser = subparsers.add_parser("add", help="Add a new task")
    add_parser.add_argument("description", type=str, help="Task description")

    done_parser = subparsers.add_parser("done", help="Mark a task as done")
    done_parser.add_argument("id", type=int, help="Task ID")

    del_parser = subparsers.add_parser("delete", help="Delete a task")
    del_parser.add_argument("id", type=int, help="Task ID")

    args = parser.parse_args()

    if args.command == "add":
        add_task(args.description)
    elif args.command == "list":
        list_tasks()
    elif args.command == "done":
        complete_task(args.id)
    elif args.command == "delete":
        delete_task(args.id)
    else:
        parser.print_help()

if __name__ == "__main__":
    main()
